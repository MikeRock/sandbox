{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "strict": true,
    "jsx": "react",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "types": ["node", "express"],
    "allowSyntheticDefaultImports": true
  },
  /*
  "rules": {
    "no-constant-condition": true
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  */
  "exclude": ["node_modules"],
  "include": ["server.ts"],
  "skipLibCheck": true
}